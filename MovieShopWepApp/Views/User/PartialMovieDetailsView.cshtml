
@using ServiceGateway.ServiceGateways
@model MovieShopWepApp.Models.PartialMovieDetailsViewModel

@{
    ViewBag.Title = "PartialMovieDetailsView";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Styles/MovieDetailsStylesheet.css">
</head>
<body>
    <div style="width: 50%; height: 70%">
        @{ double rate = CurrencyConverterService.GetCurrency(Model.CurrentCurrency); }
        <p id="title" style="height: 10%">Movie Details</p><a href="#close" title="Close" class="close">X</a>
        <div style="height: 50%; margin-top: 2%" class="row">
            <div style="height: 100%" class="col-xs-4">
                <div style="height: 25%" class="row">
                    <div class="col-xs-6">
                        <p class="type">Title:</p>
                    </div>
                    <div class="col-xs-6">
                        <p class="value">@Model.Movie.Title</p>
                    </div>
                </div>
                <div style="height: 25%" class="row">
                    <div class="col-xs-6">
                        <p class="type">Genre:</p>
                    </div>
                    <div class="col-xs-6">
                        <p class="value">@Model.Movie.Genre.Name</p>
                    </div>
                </div>
                <div style="height: 25%" class="row">
                    <div class="col-xs-6">
                        <p class="type">Released:</p>
                    </div>
                    <div class="col-xs-6">
                        <p class="value">@Model.Movie.Year</p>
                    </div>
                </div>
                <div style="height: 25%" class="row">
                    <div class="col-xs-6">
                        <p class="type">Price:</p>
                    </div>
                    <div class="col-xs-6">
                        <p class="value">@(Model.Movie.Price * rate) @Model.CurrentCurrency.ToString()</p>
                    </div>
                </div>
            </div>
            <div style="height: 100%" align="right" class="col-xs-8">
                <iframe src="@Model.Movie.MovieUrl"></iframe>
            </div>
        </div>
        <div style="height: 27%; margin-top: 1%" class="row">
            <div class="col-xs-4">
                <p class="type">Summary:</p>
            </div>
            <div align="left" class="col-xs-8">
                <p class="value">@Model.Movie.Description</p>
            </div>
        </div>

