@using System.Web.UI.WebControls
@model MovieShopWepApp.Models.CheckoutViewModel


<h2>Checkout</h2>
@using (@Html.BeginForm("Checkout", "User", FormMethod.Get))
{
    @Html.HiddenFor(model => model.movie.Id)

    @Html.HiddenFor(model => model.movie.Genre.Id)

    @Html.HiddenFor(model => model.customer.Id)

    <div>
        <input style="width: 70%" name="email" type="text" placeholder="Type Email Here" />
        <input value="Check" class="btn btn-success" type="submit" />
    </div>
}

@using (Html.BeginForm("Checkout", "User", FormMethod.Post))
{
    @Html.HiddenFor(model => model.movie.Id)

    @Html.HiddenFor(model => model.customer.Id)

    @Html.HiddenFor(model => model.customer.Orders)

    <div class="form-group">
        @Html.LabelFor(model => model.customer.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.customer.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer.LastName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.customer.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.customer.Address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer.Address, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        
        <input class="btn btn-success" value="Order" type="submit"/>
    </div>

}







