@using System.Web.UI.HtmlControls
@model MovieShopWepApp.Models.AdminViewModel
@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="~/Styles/AdminMainView.css" type="text/css"/>
    
</head>

<h2>Administation</h2>
<div style="height: 36px; margin-left: -13px;">
    <table style="width: 100%;">
        <td vaign="top" style="width: 32%">
            <table class="table table-striped table-hover" id="infoTable">
                <thead>
                    <tr>
                        <th>Customer id</th>
                        <th>Customer name</th>
                        <th><a class="btn btn-primary btn-xs" href="../Customers/Create">Create</a></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </td>
        <td vaign="top" style="width: 31%">
            <table class="table table-striped table-hover" id="infoTable">
                <thead>
                    <tr>
                        <th>Movie id</th>
                        <th>Movie name</th>
                        <th><a class="btn btn-primary btn-xs" href="../Movies/Create">Create</a></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </td>
        <td vaign="top" style="width: 33%;">
            <table class="table table-striped table-hover" id="infoTable">
                <thead>
                    <tr>
                        <th>Order id</th>
                        <th>Customer id</th>
                        <th style="height: 40px"></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </td>
    </table>
</div>

<div id="products" class="row list-group pre-scrollable" style="min-height: 600px; max-height: 600px;" valign="center">
    <table style="width: 100%" id="mainTable">

        <td valign="top" style="width: 32%">
            <table class="table table-striped table-hover" id="infoTable">
                <thead></thead>
                <tbody>
                <tr class="clickable warning dropdown-deliverable" data-for="#details_1">
                    @foreach (var customer in @Model.Customers)
                    {
                        <tr>
                            <td>@customer.Id</td>
                            <td>@customer.FirstName @customer.LastName</td>
                            <td style="width: 10px">
                                <a class="btn btn-primary btn-xs" href="../Customers/Edit/@customer.Id"> <span class="glyphicon glyphicon-pencil"></span></a>
                            </td>
                            <td style="width: 10px">
                                <a class="btn btn-danger btn-xs" href="../Customers/Delete/@customer.Id"><span class="glyphicon glyphicon-remove"></span></a>
                            </td>
                        </tr>
                    }
                </tr>
                </tbody>
            </table>

        </td>

        <td valign="top" style="width: 31%">
            <table class="table table-striped table-hover" id="infoTable">
                <thead></thead>
                <tbody>
                <tr class="clickable warning dropdown-deliverable" data-for="#details_1">
                    @foreach (var movie in @Model.Movies)
                    {
                        <tr>
                            <td>@movie.Id</td>
                            <td>@movie.Title</td>
                            <td style="width: 10px">
                                <a class="btn btn-primary btn-xs" href="../Movies/Edit/@movie.Id"> <span class="glyphicon glyphicon-pencil"></span></a>
                            </td>
                            <td style="width: 10px">
                                <a class="btn btn-danger btn-xs" href="../Movies/Delete/@movie.Id"><span class="glyphicon glyphicon-remove"></span></a>
                            </td>
                        </tr>
                    }

                </tr>
                </tbody>
            </table>

        </td>
        <td valign="top" style="width: 33%">
            <table class="table table-striped table-hover" id="infoTable">
                <thead></thead>
                <tbody>
                <tr class="clickable warning dropdown-deliverable" data-for="#details_1">
                    @foreach (var order in @Model.Orders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.Customer.Id</td>
                            <td style="width: 10px">
                                <a class="btn btn-primary btn-xs" href="../Orders/Edit/@order.Id"> <span class="glyphicon glyphicon-pencil"></span></a>
                            </td>
                            <td style="width: 10px">
                                <a class="btn btn-danger btn-xs" href="../Orders/Delete/@order.Id"><span class="glyphicon glyphicon-remove"></span></a>
                            </td>
                        </tr>
                    }
                </tr>
                </tbody>
            </table>


        </td>


    </table>
</div>

